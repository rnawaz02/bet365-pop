{
  "manifest_version": 2,
  "name": "Bet365 Pop",
  "description": "Bet365 Pop for bet365.com",
  "version": "0.1.0",
  "browser_action": {
    "default_title": "Bet365 Pop"
  },
  "icons": {
    "16": "bet365-logo16.png",
    "48": "bet365-logo48.png",
    "128": "bet365-logo128.png"
  },
  "author": "Rab Nawaz",
  "content_scripts": [
    {
      "matches": [
        "*://*.bet365.com/*"
      ],
      "all_frames": true,
      "js": [
        "app/scripts/contentscript.js"
      ],
      "run_at": "document_start"
    }
  ],
  "permissions": [
    "storage",
    "*://*.bet365.com/*"
  ]
}